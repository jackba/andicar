<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/vgRoot"
    android:background="@android:color/background_light"
    >
    <LinearLayout
       	android:id="@+id/fakeFocus"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
		android:focusable="true"
		android:focusableInTouchMode="true" 
        />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
        >
        <ImageButton
            android:id="@android:id/closeButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_cancel_selector"
            />
        <ImageButton
            android:id="@android:id/button1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_done_selector"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="@android:color/background_dark"
        />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
		    <LinearLayout
		       	android:id="@+id/llTemplateZone"
		        android:orientation="vertical"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        >
			    <LinearLayout
			        android:orientation="horizontal"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_vertical|center_horizontal"
			        >
			        <TextView
			            android:id="@+id/tvApplyTemplate"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="@string/AddOn_DataTemplate_ApplyTemplateLbl"
			            android:typeface="sans"
			            android:textColor="@android:color/widget_edittext_dark"
			            />
			        <Spinner 
			        	android:id="@+id/spnTemplate"
			            android:layout_width="120dp"
			            android:layout_height="wrap_content"
			            android:prompt="@string/GEN_ChooseOneTitle"
			            />
			        <Button
			            android:id="@+id/btnUpdate"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dp"
			            android:text="@string/GEN_Update"
			            android:typeface="sans"
			            android:layout_centerHorizontal="true"
			            />
			        <Button
			            android:id="@+id/btnNew"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dp"
			            android:text="@string/GEN_New"
			            android:typeface="sans"
			            android:layout_centerHorizontal="true"
			            />
			    </LinearLayout>
			    <TextView
			        android:layout_height="1dp"
			        android:layout_width="fill_parent"
        			android:background="@android:color/background_dark"
                	android:layout_marginBottom="5dp"
			        />
			</LinearLayout>    

            <RelativeLayout
            	android:id="@+id/lCarZone"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvCarLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_CarLabel"
                    android:typeface="sans"
		            android:textColor="@android:color/widget_edittext_dark"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17dp"
                    />
                <Spinner android:id="@+id/spnCar"
                         android:layout_height="wrap_content"
                         android:prompt="@string/GEN_ChooseOneTitle"
                         android:tag="spnCar"
            			 android:layout_alignParentRight="true"
            			android:layout_centerVertical="true" android:layout_width="220dp"/>
            </RelativeLayout>

            <RelativeLayout
            	android:id="@+id/lDriverZone"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvDriverLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_DriverLabel"
                    android:typeface="sans"
		            android:textColor="@android:color/widget_edittext_dark"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17dp"
                    />
                <Spinner android:id="@+id/spnDriver"
                         android:layout_height="wrap_content"
                         android:drawSelectorOnTop="true"
                         android:layout_marginLeft="5dp"
                         android:prompt="@string/GEN_ChooseOneTitle"
                         android:tag="spnDriver"
            			 android:layout_alignParentRight="true"
            			android:layout_centerVertical="true" 
            			android:layout_width="220dp"/>
            </RelativeLayout>

            <RelativeLayout
            	android:id="@+id/lExpTypeZone"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvExpenseTypeLabel"
                    android:text="@string/GEN_TypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
		            android:textColor="@android:color/widget_edittext_dark"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17dp"
                    />
                <Spinner android:id="@+id/spnExpType"
                         android:layout_height="wrap_content"
                         android:drawSelectorOnTop="true"
                         android:layout_marginLeft="5dp"
                         android:prompt="@string/GEN_ChooseOneTitle"
                         android:tag="spnDriver"
            			 android:layout_alignParentRight="true"
            			android:layout_centerVertical="true" 
            			android:layout_width="220dp"/>
            </RelativeLayout>

            <RelativeLayout
            	android:id="@+id/lExpCatZone"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvExpenseCategoryLabel"
                    android:text="@string/GEN_Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
		            android:textColor="@android:color/widget_edittext_dark"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17dp"
                    />
                <Spinner android:id="@+id/spnExpCategory"
                         android:layout_height="wrap_content"
                         android:drawSelectorOnTop="true"
                         android:layout_marginLeft="5dp"
                         android:prompt="@string/GEN_ChooseOneTitle"
                         android:tag="spnDriver"
            			 android:layout_alignParentRight="true"
            			android:layout_centerVertical="true" 
            			android:layout_width="220dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_DateTimeLabel"
                android:layout_marginTop="5dp"
                android:typeface="sans"
				android:textStyle="italic"
	            android:textColor="@android:color/widget_edittext_dark"
                android:textSize="17dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                >
                <TextView
                    android:id="@+id/tvDateTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:gravity="center_vertical"
		            android:textColor="@android:color/widget_edittext_dark"
                    />
                <ImageButton android:id="@+id/btnPickDate"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_calendar_selector" 
                        android:layout_width="80dp"/>
                <ImageButton android:id="@+id/btnPickTime"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_clock_selector"
                        android:layout_width="80dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvIndexLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_IndexLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
                	android:textSize="17dp"
                    />
                <EditText
                    android:id="@+id/etIndex"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:numeric="decimal"
                    android:digits="-.1234567890"
                    android:inputType="phone"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/GEN_Required"
                    android:tag="@string/GEN_IndexLabel"
                    />
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
		        android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tvQuantityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
                    android:text="@string/GEN_QuantityLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
                	android:textSize="17dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/etQuantity"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
					android:layout_toRightOf="@id/tvQuantityLabel"
                    android:numeric="decimal"
                    android:digits="-.1234567890"
                    android:inputType="phone"
                    android:hint="@string/GEN_Required"
                    android:tag="@string/GEN_QuantityLabel"
                    android:layout_width="120dp"
                    android:layout_centerVertical="true"/>
                <Spinner android:id="@+id/spnUomVolume"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
					android:layout_toRightOf="@id/etQuantity"
                    android:prompt="@string/GEN_ChooseOneTitle"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <CheckBox
                android:id="@+id/ckIsFullRefuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="@string/RefuelEditActivity_IsFullLabel"
                android:typeface="sans"
                android:textColor="@android:color/widget_edittext_dark"
               	android:textSize="17dp" 
               	/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llBaseUOMQtyZone"
                >
                <TextView
                    android:id="@+id/tvBaseUOMQtyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RefuelEditActivity_QtyInBaseUOMLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
                <TextView
                    android:id="@+id/tvBaseUOMQtyValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvCurrencyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true" 
                    android:text="@string/GEN_CurrencyLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
                <Spinner android:id="@+id/spnCurrency"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/GEN_ChooseOneTitle"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llConversionRateZone"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvConversionRateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_ConversionRateLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
                <EditText
                    android:id="@+id/etConversionRate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:numeric="decimal"
                    android:digits="-.1234567890"
                    android:inputType="phone"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/GEN_Required"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/rbInsertModeAmount"
                    android:id="@+id/rgExpenseInsertMode">
                    <RadioButton
                        android:id="@+id/rbInsertModeAmount"
                        android:text="@string/GEN_AmountLabel"
                        android:typeface="sans"
	                    android:textColor="@android:color/widget_edittext_dark"
	               		android:textSize="17dp"
                        />
                    <RadioButton
                        android:id="@+id/rbInsertModePrice"
                        android:text="@string/GEN_PriceLabel"
                        android:typeface="sans"
	                    android:textColor="@android:color/widget_edittext_dark"
	               		android:textSize="17dp"
                        />
                </RadioGroup>

                <EditText
                    android:id="@+id/etUserInput"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:numeric="decimal"
                    android:digits="-.1234567890"
                    android:inputType="phone"
                    android:hint="@string/GEN_Required"
                    android:tag="@string/GEN_PriceLabel"
                    android:layout_marginLeft="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvCalculatedTextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
                <TextView
                    android:id="@+id/tvCalculatedTextContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llConvertedAmountZone"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvConvertedAmountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="@android:color/background_dark"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvBPartnerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_BPartner"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acBPartner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/tvBPartnerAdressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Address"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acAdress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvBPartnerAdressInfoLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/GEN_BPartnerAdressInfo"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textColor="@android:color/widget_edittext_dark"
                android:gravity="center"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/tvDocumentNoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_DocumentNoLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/widget_edittext_dark"
               		android:textSize="17dp"
                    />
                <EditText
                    android:id="@+id/etDocumentNo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="@android:color/background_dark"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tvTagLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:layout_marginTop="5dp"
                android:text="@string/GEN_Tag"
                android:typeface="sans"
				android:textColor="@android:color/widget_edittext_dark"
             	android:textSize="17dp"
                />
            <AutoCompleteTextView
                android:id="@+id/acTag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               	android:layout_marginTop="5dp"
                android:hint="@string/GEN_TagHint"
                />
            <TextView
                android:id="@+id/tvUserCommentLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/GEN_UserCommentLabel"
                android:typeface="sans"
				android:textColor="@android:color/widget_edittext_dark"
             	android:textSize="17dp"
                />
            <AutoCompleteTextView
                android:id="@+id/acUserComment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
