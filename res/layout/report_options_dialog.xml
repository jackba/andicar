<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:id="@+id/vgRoot"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        >

        <CheckBox
            android:id="@+id/ckIsSendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DIALOGReport_SendEmailLabel"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            >
            <TextView
                android:id="@+id/tvFormatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DIALOGReport_ReportFormatLabel"
                />
            <Spinner android:id="@+id/spnReportOptionsFormat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="2dip"
                android:prompt="@string/GEN_ChooseOneTitle"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
