<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:id="@+id/vgRoot"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <TextView
                android:id="@+id/tvCarLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_CAR_LABEL"
                />
            <Spinner android:id="@+id/spnCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="5dip"
                android:background="@color/mandatory_bg"
                android:prompt="@string/GEN_CHOOSEONE_DIALOGTITLE"
                />

            <TextView
                android:id="@+id/tvDriverLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/GEN_DRIVER_LABEL"
                />
            <Spinner android:id="@+id/spnDriver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="5dip"
                android:background="@color/mandatory_bg"
                android:prompt="@string/GEN_CHOOSEONE_DIALOGTITLE"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_NAME_LABEL"
                />
            <EditText
                android:id="@+id/etName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@android:drawable/editbox_background"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvUserCommentLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/GEN_USER_COMMENT_LABEL"
            />
        <AutoCompleteTextView
            android:id="@+id/acUserCommentEntry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <CheckBox
                android:id="@+id/ckIsCreateMileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GPSTRACK_ACTIVITY_CREATEMILEAGE_LABEL"
                android:layout_marginLeft="10dip"
                android:layout_alignParentLeft="true"
                />
            <Button android:id="@+id/btnStartStopGpsTrack"
                style="?android:attr/buttonStyleSmall"
                android:text="@string/GPSTRACK_ACTIVITY_GPSTRACKSTART_BTN_CAPTION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/ckIsCreateMileage"
                />
<!--                android:layout_alignTop="@id/gpsTrackCreateMileageCk"
-->        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <TextView
                android:id="@+id/tvFileFormatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GPSTRACK_ACTIVITY_FILEFORMAT_LABEL"
                />
            <CheckBox
                android:id="@+id/ckIsUseKML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PREF_GPSTRACK_FILEFORMATKML_TITLE"
                android:layout_marginLeft="5dip"
                />
            <CheckBox
                android:id="@+id/ckIsUseGPX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PREF_GPSTRACK_FILEFORMATGPX_TITLE"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <CheckBox
                android:id="@+id/ckIsShowOnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PREF_GPSTRACK_SHOWONMAP_SUMMARY"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
