<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/vgRoot"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
       	android:id="@+id/fakeFocus"
		android:focusable="true"
		android:focusableInTouchMode="true" 
        />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
    	android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <ImageButton
            android:id="@android:id/closeButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_cancel_selector"
            />
        <ImageButton
            android:id="@android:id/button1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_done_selector"
            />
    </RelativeLayout>
    <TextView
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="@android:color/background_dark"
        android:layout_marginTop="5dp"
        />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	    	android:paddingLeft="5dp"
	        android:layout_marginRight="5dp"
            >

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_NameLabel"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/GEN_Required"
                    android:tag="@string/GEN_NameLabel"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvAddressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Address"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/GEN_Required"
                    android:tag="@string/GEN_Address"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvCityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_City"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acCity"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvPostalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Postal"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acPostal"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvRegionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Region"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acRegion"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvCountryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Country"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acCountry"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>
            
            <TextView
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="@android:color/background_dark"
                android:layout_marginTop="5dp"
                />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvContactLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Contact"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acContact"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvPhoneLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Phone"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acPhone1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvPhoneLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Phone2"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acPhone2"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Email"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acEmail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
					android:layout_toRightOf="@id/tvEmailLabel"
            		android:layout_centerVertical="true" 
                	android:layout_marginLeft="5dp"
                    />
                <ImageButton
                    android:id="@+id/btnEmail"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_mail24x24"
            		android:layout_alignParentRight="true"
            		android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tvFaxLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_Fax"
                    android:typeface="sans"
            		android:layout_alignParentLeft="true"
            		android:layout_centerVertical="true"
                    android:textSize="17sp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/acFax"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
					android:layout_alignParentRight="true"
            		android:layout_centerVertical="true" 
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvUserCommentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_UserCommentLabel"
                android:typeface="sans"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/etUserComment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
            <TextView
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="@android:color/background_dark"
                android:layout_marginTop="5dp"
                />

            <CheckBox
                android:id="@+id/ckIsActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_IsActiveLabel"
                android:typeface="sans"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>