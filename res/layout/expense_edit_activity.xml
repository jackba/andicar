<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:id="@+id/vgRoot"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        >
        <TextView
            android:id="@+id/tvWarningLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_horizontal|bottom"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvCarLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_CarLabel"
                />
            <Spinner android:id="@+id/spnCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="5dip"
                android:background="@color/mandatory_bg"
                android:prompt="@string/GEN_ChooseOneTitle"
                />

            <TextView
                android:id="@+id/tvDriverLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/GEN_DriverLabel"
                />
            <Spinner android:id="@+id/spnDriver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="5dip"
                android:background="@color/mandatory_bg"
                android:prompt="@string/GEN_ChooseOneTitle"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            >
            <TextView
                android:id="@+id/tvExpenseCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_ExpenseCategoryLabel"
                />
            <Spinner android:id="@+id/spnExpCategory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="10dip"
                android:background="@color/mandatory_bg"
                android:prompt="@string/GEN_ChooseOneTitle"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            >
            <TextView
                android:id="@+id/tvExpenseTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_ExpenseTypeLabel"
                />
            <Spinner android:id="@+id/spnExpType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="10dip"
                android:background="@color/mandatory_bg"
                android:prompt="@string/GEN_ChooseOneTitle"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            >
            <TextView
                android:id="@+id/tvAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_AmountLabel"
                />
            <Spinner android:id="@+id/spnCurrency"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="5dip"
                android:background="@color/mandatory_bg"
                android:prompt="@string/GEN_ChooseOneTitle"
                />
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numeric="decimal"
                android:layout_marginLeft="5dip"
                android:background="@color/mandatory_bg"
                android:tag="@string/GEN_AmountLabel"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:id="@+id/llConversionRateZone"
            >
            <TextView
                android:id="@+id/tvConversionRateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_ConvertionRateLabel"
                />
            <EditText
                android:id="@+id/etConversionRate"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:numeric="decimal"
                android:layout_marginLeft="5dip"
                android:background="@color/mandatory_bg"
                />
            <TextView
                android:id="@+id/tvConvertedAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="@string/GEN_ConvertedAmountLabel"
                />
            <TextView
                android:id="@+id/tvConvertedAmountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <TextView
                android:id="@+id/tvIndexLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_IndexLabel"
                />
            <EditText
                android:id="@+id/etIndex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numeric="decimal"
                android:layout_marginLeft="10dip"
                android:background="@android:drawable/editbox_background"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <TextView
                android:id="@+id/tvDocumentNoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_DocumentNoLabel"
                />
            <EditText
                android:id="@+id/etDocumentNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@android:drawable/editbox_background"
                />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dip"
            >
            <TextView android:id="@+id/tvDateTimeValue"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      />
            <Button android:id="@+id/btnPickDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_marginLeft="10dip"
                    android:text="@string/GEN_PickDateCaption"/>
            <Button android:id="@+id/btnPickTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="@string/GEN_PickTimeCaption"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvUserCommentLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/GEN_UserCommentLabel"
            />
        <AutoCompleteTextView
            android:id="@+id/acUserComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            >
            <Button
                android:id="@android:id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="?android:attr/buttonStyleSmall"
                android:text="@string/GEN_Done"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
