<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginRight="5dip"
    android:id="@+id/vgRoot"
    android:background="@android:color/black"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        >
        <ImageButton
            android:id="@android:id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_background_selector"
            android:src="@drawable/icon_cancel_selector"
            />
        <ImageButton
            android:id="@android:id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_background_selector"
            android:src="@drawable/icon_done_selector"
            android:layout_marginRight="5dip"
            />
    </RelativeLayout>
    <TextView
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:background="@color/separator_bg"
        android:layout_marginTop="10dip"
        />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                >
                <TextView
                    android:id="@+id/tvCarLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_CarLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    />
                <Spinner android:id="@+id/spnCar"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:drawSelectorOnTop="true"
                         android:layout_marginLeft="5dip"
                         android:prompt="@string/GEN_ChooseOneTitle"
                         android:background="@drawable/white_background"
                         />

                <TextView
                    android:id="@+id/tvDriverLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/GEN_DriverLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    />
                <Spinner android:id="@+id/spnDriver"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:drawSelectorOnTop="true"
                         android:layout_marginLeft="5dip"
                         android:prompt="@string/GEN_ChooseOneTitle"
                         android:background="@drawable/white_background"
                         />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                >
                <TextView
                    android:id="@+id/tvExpenseTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_ExpenseTypeLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    />
                <Spinner android:id="@+id/spnExpType"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:drawSelectorOnTop="true"
                         android:layout_marginLeft="5dip"
                         android:background="@drawable/white_background"
                         android:prompt="@string/GEN_ChooseOneTitle"
                         />
            </LinearLayout>

            <TextView
                android:layout_height="1dip"
                android:layout_width="fill_parent"
                android:background="@color/separator_bg"
                android:layout_marginTop="5dip"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                >
                <TextView
                    android:id="@+id/tvStartStopIndexHdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GEN_IndexLabel"
                    android:layout_marginTop="5dip"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/rbInsertModeIndex"
                    android:id="@+id/rgMileageInsertMode"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    >
                    <RadioButton
                        android:id="@id/rbInsertModeIndex"
                        android:text="@string/MileageEditActivity_OptionIndexLabel"
                        style="?android:attr/textAppearanceSmall"
                        android:typeface="sans"
                        android:textColor="@android:color/white"
                        android:button="@drawable/rb_selector"
                        />
                        <!--android:gravity="center_vertical"-->
                    <RadioButton
                        android:id="@+id/rbInsertModeMileage"
                        android:text="@string/MileageEditActivity_OptionMileageLabel"
                        style="?android:attr/textAppearanceSmall"
                        android:typeface="sans"
                        android:textColor="@android:color/white"
                        android:button="@drawable/rb_selector"
                        android:layout_marginLeft="10dip"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvIndexStartLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MileageEditActivity_IndexStartLabel"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    />
                <EditText
                    android:id="@+id/etIndexStart"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:numeric="decimal"
                    android:digits="-.1234567890"
                    android:inputType="phone"
                    android:layout_marginLeft="2dip"
                    android:hint="@string/GEN_Required"
                    android:background="@drawable/white_background"
                    android:tag="@string/MileageEditActivity_IndexStartLabel"
                    />

                <TextView
                    android:id="@+id/tvUserInputLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    />
                <EditText
                    android:id="@+id/etUserInput"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:numeric="decimal"
                    android:digits="-.1234567890"
                    android:inputType="phone"
                    android:layout_marginLeft="2dip"
                    android:hint="@string/GEN_Required"
                    android:background="@drawable/white_background"
                    android:tag=""
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dip"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCalculatedTextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:id="@+id/tvCalculatedTextContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
            <TextView
                android:layout_height="1dip"
                android:layout_width="fill_parent"
                android:background="@color/separator_bg"
                android:layout_marginTop="5dip"
                />

            <TextView
                android:id="@+id/tvUserCommentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GEN_UserCommentLabel"
                android:layout_marginTop="5dip"
                android:typeface="sans"
                android:textColor="@android:color/white"
                />
            <AutoCompleteTextView
                android:id="@+id/acUserComment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/white_background"
                />

            <!--date/time -->
            <TextView
                android:id="@+id/tvDateTimeHdrLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/GEN_DateTimeLabel"
                android:layout_marginTop="5dip"
                android:typeface="sans"
                android:textColor="@android:color/white"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tvDateTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    />
                <ImageButton android:id="@+id/btnPickDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/btn_background_selector"
                        android:src="@drawable/icon_calendar_selector"
                        />
                <ImageButton android:id="@+id/btnPickTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/btn_background_selector"
                        android:src="@drawable/icon_clock_selector"
                        />
            </LinearLayout>
            <TextView
                android:layout_height="1dip"
                android:layout_width="fill_parent"
                android:background="@color/separator_bg"
                android:layout_marginTop="10dip"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>