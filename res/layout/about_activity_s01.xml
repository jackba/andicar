<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:id="@+id/vgRoot"
    >
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llAbout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:paddingLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        >
		<ImageView
            android:id="@+id/aboutDialogPicture"
			android:src="@drawable/about_dialog_picture"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
			android:contentDescription="@string/APP_Description"
			/>
        
	    <TextView
	        android:layout_height="1dp"
	        android:layout_width="fill_parent"
	        android:layout_marginTop="2dp"
	        />

        <TextView
            android:id="@+id/tvAbout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:typeface="sans"
            android:text="@string/LM_COPYRIGHT_HTML1"
	        android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/tvAbout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:typeface="sans"
            android:text="@string/LM_COPYRIGHT_HTML2"
            />
    </LinearLayout>
</ScrollView>